{
    "private": true,
    "name": "fireworks",
    "version": "0.0.0",
    "license": "MIT",
    "alias": "sydney-fireworks.com",
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
        "build": "preact build --template src/template.html",
        "serve": "preact build --template src/template.html && preact serve",
        "dev": "preact watch --template src/template.html",
        "lint": "eslint src",
        "deploy": "yarn build && cd build && now"
    },
    "eslintConfig": {
        "extends": "eslint-config-synacor",
        "rules": {
            "no-unused-vars": "warn",
            "react/sort-comp": "off",
            "lines-around-comment": "off",
            "react/prefer-stateless-function": "off"
        }
    },
    "eslintIgnore": ["build/*"],
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.40",
        "@babel/preset-env": "^7.0.0-beta.40",
        "babel-plugin-styled-components": "^1.5.0",
        "eslint": "^4.16.0",
        "eslint-config-synacor": "^2.1.0",
        "if-env": "^1.0.0",
        "preact-cli": "^2.1.1",
        "preact-cli-plugin-fast-async": "^1.0.1",
        "preact-cli-sw-precache": "^1.0.3"
    },
    "dependencies": {
        "components": "^0.1.0",
        "date-fns": "^1.29.0",
        "preact": "^8.2.1",
        "preact-compat": "^3.18.0",
        "preact-material-components": "^1.3.5",
        "preact-router": "^2.5.5",
        "styled": "^1.0.0",
        "styled-components": "^3.1.6",
        "unistore": "^3.0.4"
    }
}